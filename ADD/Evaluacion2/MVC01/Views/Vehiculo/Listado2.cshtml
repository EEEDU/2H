@model IEnumerable<MVC01.Controllers.VehiculoController.VehiculoTotal>

@{
    ViewBag.Title = "Listado2";
}

<h2>Listado de vehículos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName(Nombre)
        </th>
        <th>
            @Html.DisplayName(Matricula)
        </th>
        <th>
            @Html.DisplayName(Color)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nom_marca)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nom_serie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Matricula)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Color)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
