@model IEnumerable<MVC01.Controllers.VehiculoController.VehiculoTotal>

@{
    ViewBag.Title = "ListadoColor";
}

<h2>ListadoColor</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form method="get">
    <div align="center">
        @Html.DropDownList("color", "Selecciona un color")
        <input type="submit" value="Buscar"/>
    </div>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom_marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom_serie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nom_marca)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nom_serie)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Matricula)
    </td>
</tr>
}

</table>
